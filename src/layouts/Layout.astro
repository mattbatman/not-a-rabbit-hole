---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <slot />
    <footer>
      Made in Indiana by <a href="https://mattbatman.com">Matt Batman</a>
    </footer>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'Fraunces';
    src: url('/fonts/Fraunces-Italic-VariableFont_SOFT,WONK,opsz,wght.ttf')
      format('truetype-variations');
    font-weight: 100 900;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: 'Fraunces';
    src: url('/fonts/Fraunces-VariableFont_SOFT,WONK,opsz,wght.ttf')
      format('truetype-variations');
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --green: #4f7942;
    --orange: rgb(244, 168, 76);
    --black: #0e150c;
    --less-black: #20251f;
    --x: #000000;
    --youtube: #ff6b6b;
  }

  .fraunces-i {
    font-family: 'Fraunces', system-ui;
    font-optical-sizing: auto;
    font-weight: 100;
    font-style: italic;
    font-variation-settings:
      'SOFT' 0,
      'WONK' 1;
  }

  .fraunces-tag-header {
    font-family: 'Fraunces', system-ui;
    font-optical-sizing: auto;
    font-weight: 700;
    font-style: normal;
    font-variation-settings:
      'SOFT' 0,
      'WONK' 1;
  }

  .fraunces-tag {
    font-family: 'Fraunces', system-ui;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;
    font-variation-settings:
      'SOFT' 0,
      'WONK' 0;
  }

  .fraunces-title {
    font-family: 'Fraunces', system-ui;
    font-optical-sizing: auto;
    font-weight: 200;
    font-style: normal;
    font-variation-settings:
      'SOFT' 0,
      'WONK' 1;
  }

  .fraunces-section-header {
    font-family: 'Fraunces', system-ui;
    font-optical-sizing: auto;
    font-weight: 700;
    font-style: normal;
    font-variation-settings:
      'SOFT' 0,
      'WONK' 1;
    font-size: 3rem;
  }

  .fraunces-button {
    font-family: 'Fraunces', system-ui;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-variation-settings:
      'SOFT' 100,
      'WONK' 0;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: 'Fraunces', system-ui, sans-serif;
    background: var(--black);
  }

  body {
    color: white;
    margin: 0;
  }

  p {
    font-family: 'Fraunces', system-ui;
    font-optical-sizing: auto;
    font-weight: 300;
    font-style: normal;
    font-variation-settings:
      'SOFT' 0,
      'WONK' 0;
    font-size: 1.1rem;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .video-wrapper {
    max-width: 560px;
  }

  .video-wrapper.YouTube {
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 25px;
    height: 0;
    margin-bottom: 1em;
  }

  .video-wrapper.YouTube iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  iframe {
    max-width: 100%;
  }

  .main-container {
    text-align: center;
    color: white;
    margin-left: auto;
    margin-right: auto;
    max-width: 100vw;
    padding-left: 1rem;
    padding-right: 1rem;
    width: 100%;
  }

  .tube {
    width: 100%;
    margin: 0 auto;
    max-width: 560px;
  }

  a {
    text-decoration: none;
  }

  a,
  a:visited,
  a:active {
    color: white;
  }

  footer {
    text-align: center;
    padding-top: 5rem;
    padding-bottom: 5rem;
  }

  footer a,
  footer a:visited,
  footer a:active {
    color: var(--orange);
  }
</style>
