---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --green: #4ecdc4;
    --yellow: #ffd93c;
    --black: #1f2321;
    --less-black: #343b37;
    --x: #000000;
    --youtube: #ff6b6b;
  }
  * {
    box-sizing: border-box;
  }
  html {
    font-family: system-ui, sans-serif;
    background: var(--black);
  }

  body {
    color: white;
    margin: 0;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .video-wrapper {
    max-width: 560px;
  }

  .video-wrapper.YouTube {
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 25px;
    height: 0;
    margin-bottom: 1em;
  }

  .video-wrapper.YouTube iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  iframe {
    max-width: 100%;
  }

  .main-container {
    text-align: center;
    color: white;
    margin-left: auto;
    margin-right: auto;
    max-width: 100vw;
    padding-left: 1rem;
    padding-right: 1rem;
    width: 100%;
  }

  .tube {
    width: 100%;
    margin: 0 auto;
    max-width: 560px;
  }

  a {
    text-decoration: none;
  }

  a,
  a:visited,
  a:active {
    color: white;
  }
</style>
