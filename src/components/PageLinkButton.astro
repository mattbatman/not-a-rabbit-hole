---
interface Props {
  slug: string;
}

const { slug } = Astro.props;
---

<div class="page-link-block">
  <a href={`/videos/${slug}`} class="page-link">More info &rarr;</a>
</div>
<style>
  .page-link-block {
    margin-bottom: 1rem;
  }

  .page-link {
    display: inline-block;
    border: 1px solid #ffffff;
    padding: 0.5rem;
  }
</style>
