---
interface Props {
  video: CollectionEntry<'videos'>;
}

import type { CollectionEntry } from 'astro:content';
import Tags from './Tags.astro';
import SourceLink from './SourceLink.astro';

// `post` will match your 'blog' collection schema type
const { video } = Astro.props;
const { Content } = await video.render();
---
<div class="card">
  <div class:list={[ 'video-wrapper', `${video.data.platform}` ]}>
    <Content />
  </div>
  <div class="title">
   { video.data.title }
  </div>
  <div class="page-link-block">
    <a href={`/videos/${video.slug}`} class="page-link">More info &rarr;</a>
  </div>
  <SourceLink platform={video.data.platform} link={video.data['source-link']} />
  <Tags tags={video.data['video-tags']} />
</div>
<style>
  .card {
    margin-bottom: 2rem;
  }

  .title {
    text-align: left;
    margin-bottom: 1rem;
    font-weight: bold;
  }

  .page-link-block, .source-link-block {
    text-align: right;
    margin-bottom: 1rem;
  }

  .page-link {
    display: inline-block;
    border: 1px solid #ffffff;
    padding: 0.5rem;
  }
</style>
